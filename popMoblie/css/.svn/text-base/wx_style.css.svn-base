._wx_newsBox ._wx_news ._wx_verification_code ._wx_right{margin-left: 80px;}
._wx_newsBox ._wx_news ._wx_verification_code ._wx_right ._wx_yzm{line-height:30px; border: none; font-size: 17px; width:890px;text-align: right;}
._wx_newsBox ._wx_news ._wx_verification_code ._wx_left{width: 100px; line-height: 56px; float: left; text-align: left;padding-left: 20px; }
