@charset "utf-8";
*{margin: 0; padding: 0;}
body{margin:0px auto;font-size:14px;font-family:"微软雅黑" !important;background-color: #eeeeee}
a{cursor:pointer;text-decoration: none;}
a img{border:0px}
ol,ul,li {list-style:none; padding: 0; margin: 0;}
table, tbody, thead{border: none; border-collapse: collapse; padding: 0; margin: 0;}
header, section, footer{width:100%;max-width: 1000px;min-width:320px;margin-bottom: 30px;background-color: #eeeeee}
/*common class haozj 2015-4-27*/
._clearfix { *zoom: 1;}
._clearfix:before, ._clearfix:after{display: table; line-height: 0;   content: "";}
._clearfix:after{clear: both;}
/*规定页面所有input的颜色及默认提示的颜色*/
input{color: #000000; outline: none;border:0;width:880px;}
input::-webkit-input-placeholder{color: #DDDDDD;text-align:right;}

/*--header--*/
header{text-align: center;height:46px;background-color: #000; color: #FFFFFF;}
header ._left_btn{float:left;margin-left:16px;}
header ._left_btn img{height:34px;margin-top:7px;}
header ._right_btn{float:right;margin-right: 16px;}
header ._right_btn img{ height: 26px; vertical-align: middle; margin-top: 10px;}
header ._title{font-size:22px;color: #fff;line-height: 48px;}


/*--手机绑定--*/
