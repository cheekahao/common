._wx_newsBox ._wx_news ._wx_user_birth ._wx_right ._wx_yzm{line-height:30px; border: none;width:890px;text-align: right;}
._wx_newsBox ._wx_news ._wx_user_birth ._wx_left{width: 100px; line-height: 56px; float: left; text-align: left;padding-left: 20px; }
._wx_newsBox ._wx_button_box{height: 43px;margin-top: 10px;}
._wx_newsBox ._wx_news ._wx_phone_number ._wx_right ._wx_hqyzm {
  float: right;
  vertical-align: middle;
